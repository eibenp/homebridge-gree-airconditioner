              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].encryptionVersion",
              "flex": "1 1 50%",
              "title": "Hálózati protokoll titkosítási verziója:",
              "description": "Hagyd Automatikus értéken. Ha nem működik, válaszd ki a megfelelő verziót.",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default)$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].model",
              "flex": "1 1 50%",
              "title": "Készülék típusa:",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].speedSteps",
              "flex": "1 1 50%",
              "title": "Ventilátorfokozatok száma:",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].minimumTargetTemperature",
              "flex": "1 1 50%",
              "title": "Minimális célhőmérséklet:",
              "description": "Minimális célhőmérséklet (°C)",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].maximumTargetTemperature",
              "flex": "1 1 50%",
              "title": "Maximális célhőmérséklet:",
              "description": "Maximális célhőmérséklet (°C)",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].sensorOffset",
              "flex": "1 1 50%",
              "title": "Hőmérséklet-eltolás:",
              "description": "Hőmérséklet-érzékelő kalibrálása (°C)",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].temperatureStepSize",
              "flex": "1 1 50%",
              "title": "Hőmérséklet lépésköze:",
              "description": "Érvényes értékek: 0,5 (°F) és 1 (°C)<BR />(Ha üres vagy érvénytelen, a Homebridge beállításai alapján kerül kiszámításra)",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].xFanEnabled",
              "flex": "1 1 50%",
              "title": "Szárítás engedélyezve",
              "description": "Ha engedélyezve van, kikapcsoláskor a Szárítás funkció automatikusan aktiválódik az eszközön",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].temperatureSensor",
              "flex": "1 1 50%",
              "title": "Hőmérséklet-érzékelő:",
              "description": "Extra hőmérséklet-érzékelő az Otthon appban",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].modifyVerticalSwingPosition",
              "flex": "1 1 50%",
              "title": "Függőleges pozíció módosítása:",
              "description": "Mikor módosuljon a függőleges lamella pozíciója",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].defaultVerticalSwing",
              "flex": "1 1 50%",
              "title": "Függőleges pozíció:",
              "description": "Fűtés/hűtés módban használt függőleges lamellapozíció",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true && model.devices[arrayIndices].modifyVerticalSwingPosition !== 0);"
              }
            },
            {
              "key": "devices[].fanControlEnabled",
              "flex": "1 1 50%",
              "title": "Ventilátorüzemmód-vezérlés engedélyezve",
              "description": "Ha be van jelölve, ventilátorvezérlés jelenik meg az Otthon appban",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].defaultFanVerticalSwing",
              "flex": "1 1 50%",
              "title": "Ventilátor függőleges pozíciója:",
              "description": "Ventilátor módban használt függőleges lamellapozíció",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true && [3, 4].includes(model.devices[arrayIndices].modifyVerticalSwingPosition) && model.devices[arrayIndices].fanControlEnabled === true);"
              }
            },
            {
              "key": "devices[].silentTimeRange",
              "flex": "1 1 50%",
              "title": "Csendes időszak:",
