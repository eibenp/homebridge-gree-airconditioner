{
  "pluginAlias": "GREEAirConditioner",
  "pluginType": "platform",
  "singular": true,
  "strictValidation": false,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "required": true,
        "default": "GREE Air Conditioner"
      },
      "port": {
        "type": "integer",
        "required": false,
        "minimum": 1025
      },
      "scanInterval": {
        "type": "integer",
        "required": false,
        "default": 60,
        "minimum": 5
      },
      "disableAutoDetection": {
        "type": "boolean",
        "default": false
      },
      "devices": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "mac": {
              "type": "string",
              "required": true,
              "pattern": "^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$"
            },
            "name": {
              "type": "string",
              "required": false
            },
            "model": {
              "type": "string",
              "required": false
            },
            "speedSteps": {
              "type": "integer",
              "required": true,
              "default": 5,
              "oneOf": [
                {
                  "title": "3-stufiges Modell",
                  "enum": [
                    3
                  ]
                },
                {
                  "title": "5-stufiges Modell",
                  "enum": [
                    5
                  ]
                }
              ]
            },
            "statusUpdateInterval": {
              "type": "integer",
              "required": false,
              "minimum": 1,
              "placeholder": 10
            },
            "sensorOffset": {
              "type": "integer",
              "required": false,
              "placeholder": 40
            },
            "minimumTargetTemperature": {
              "type": "integer",
              "required": false,
              "minimum": 8,
              "placeholder": 16
            },
            "maximumTargetTemperature": {
              "type": "integer",
              "required": false,
              "maximum": 30,
              "placeholder": 30
            },
            "xFanEnabled": {
              "type": "boolean",
              "default": true
            },
            "temperatureSensor": {
              "type": "string",
              "required": true,
              "default": "disabled",
              "oneOf": [
                {
                  "title": "Deaktiviert",
                  "enum": [
                    "disabled"
                  ]
                },
                {
                  "title": "Untergeordnetes Zubehör",
                  "enum": [
                    "child"
                  ]
                },
                {
                  "title": "Eigenständiges Zubehör",
                  "enum": [
                    "separate"
                  ]
                }
              ]
            },
            "temperatureStepSize": {
              "type": "number",
              "minimum": 0.5,
              "multipleOf": 0.5,
              "required": false
            },
            "disabled": {
              "type": "boolean"
            },
            "modifyVerticalSwingPosition": {
              "type": "integer",
              "required": true,
              "default": 0,
              "oneOf": [
                {
                  "title": "Niemals",
                  "enum": [
                    0
                  ]
                },
                {
                  "title": "Standard nach dem Einschalten überschreiben",
                  "enum": [
                    1
                  ]
                },
                {
                  "title": "Standard nach dem Einschalten oder Deaktivieren der Schwenkbewegung überschreiben",
                  "enum": [
                    2
                  ]
                },
                {
                  "title": "Immer nach dem Einschalten festlegen",
                  "enum": [
                    3
                  ]
                },
                {
                  "title": "Immer nach dem Einschalten oder Deaktivieren der Schwenkbewegung festlegen",
                  "enum": [
                    4
                  ]
                }
              ]
            },
            "defaultVerticalSwing": {
              "type": "integer",
              "required": true,
              "default": 0,
              "oneOf": [
                {
                  "title": "Gerätestandard",
                  "enum": [
                    0
                  ]
                },
                {
                  "title": "Fixiert – Höchste",
                  "enum": [
                    2
                  ]
                },
                {
                  "title": "Fixiert – Hoch",
                  "enum": [
                    3
                  ]
                },
                {
                  "title": "Fixiert – Mittel",
                  "enum": [
                    4
                  ]
                },
                {
                  "title": "Fixiert – Niedrig",
                  "enum": [
                    5
                  ]
                },
                {
                  "title": "Fixiert – Niedrigste",
                  "enum": [
                    6
                  ]
                }
              ]
            },
            "defaultFanVerticalSwing": {
              "type": "integer",
              "required": true,
              "default": 0,
              "oneOf": [
                {
                  "title": "Gerätestandard",
                  "enum": [
                    0
                  ]
                },
                {
                  "title": "Fixiert – Höchste",
                  "enum": [
                    2
                  ]
                },
                {
                  "title": "Fixiert – Hoch",
                  "enum": [
                    3
                  ]
                },
                {
                  "title": "Fixiert – Mittel",
                  "enum": [
                    4
                  ]
                },
                {
                  "title": "Fixiert – Niedrig",
                  "enum": [
                    5
                  ]
                },
                {
                  "title": "Fixiert – Niedrigste",
                  "enum": [
                    6
                  ]
                }
              ]
            },
            "encryptionVersion" : {
              "type": "integer",
              "required": true,
              "default": 0,
              "oneOf": [
                {
                  "title": "Automatisch",
                  "enum": [
                    0
                  ]
                },
                {
                  "title": "v1",
                  "enum": [
                    1
                  ]
                },
                {
                  "title": "v2",
                  "enum": [
                    2
                  ]
                }
              ]
            },
            "port": {
              "type": "integer",
              "required": false,
              "minimum": 1025
            },
            "ip": {
              "type": "string",
              "required": false,
              "format": "ipv4"
            },
            "fanControlEnabled": {
              "type": "boolean"
            },
            "silentTimeRange": {
              "type": "string",
              "required": false,
              "pattern": "^(0[0-9]|1[0-9]|2[0-3]):[0-5][0-9]-(((0[0-9]|1[0-9]|2[0-3]):[0-5][0-9])|24:00)$"
            }
          }
        }
      }
    }
  },
  "layout": [
    {
      "key": "name",
      "title": "Name:"
    },
    {
      "type": "flex",
      "flex-flow": "row wrap",
      "items": [
        {
          "key": "port",
          "flex": "1 1 50%",
          "title": "Port:",
          "description": "UDP-Port der Bridge zur Geräteerkennung (leer = automatisch)"
        },
        {
          "key": "scanInterval",
          "flex": "1 1 50%",
          "title": "Suchintervall:",
          "description": "Zeit zwischen Suchvorgängen in Sekunden (leer = 60 s)"
        },
        {
          "key": "disableAutoDetection",
          "flex": "1 1 100%",
          "title": "Automatische Erkennung deaktivieren",
          "description": "Wenn die automatische Erkennung deaktiviert ist, sind nur die unter Geräte aufgeführten Klimageräte verfügbar"
        }
      ]
    },
    {
      "type": "array",
      "key": "devices",
      "title": "Geräte",
      "buttonText": "Gerät hinzufügen",
      "expandable": true,
      "expanded": false,
      "items": [
        {
          "type": "div",
          "displayFlex": true,
          "flex-flow": "row wrap",
          "items": [
            {
              "key": "devices[].mac",
              "flex": "1 1 50%",
              "title": "MAC-Adresse (Seriennummer):",
              "description": "MAC-Adresse in Kleinbuchstaben ohne Trennzeichen<br />ODER<br />dieser Sonderwert: <b>default</b>"
            },
            {
              "key": "devices[].name",
              "flex": "1 1 50%",
              "title": "Gerätename:",
              "description": "Individueller Gerätename. Verwende nur Buchstaben, Zahlen, Leerzeichen und Apostrophe. Mit einem Buchstaben oder einer Zahl beginnen und enden. Emojis werden nicht unterstützt.",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac));"
              }
            },
            {
              "key": "devices[].disabled",
              "flex": "1 1 100%",
              "title": "Deaktiviert",
              "description": "Wenn aktiviert, wird dieses Gerät entfernt und von Apple Home ignoriert",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac));"
              }
            },
            {
              "key": "devices[].ip",
              "flex": "1 1 50%",
              "title": "IP-Adresse:",
              "description": "IP-Adresse des Geräts (leer = automatisch)",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].port",
              "flex": "1 1 50%",
              "title": "Port:",
              "description": "Gerätespezifischer UDP-Port (leer = automatisch)",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].statusUpdateInterval",
              "flex": "1 1 50%",
              "title": "Aktualisierungsintervall:",
              "description": "Intervall in Sekunden",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].encryptionVersion",
              "flex": "1 1 50%",
              "title": "Version der Netzwerkverschlüsselung:",
              "description": "Auf Automatisch belassen. Falls es nicht funktioniert, wähle eine bestimmte Version.",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default)$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].model",
              "flex": "1 1 50%",
              "title": "Gerätemodell:",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].speedSteps",
              "flex": "1 1 50%",
              "title": "Lüfterstufen:",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].minimumTargetTemperature",
              "flex": "1 1 50%",
              "title": "Minimale Zieltemperatur:",
              "description": "Minimale Zieltemperatur (°C)",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].maximumTargetTemperature",
              "flex": "1 1 50%",
              "title": "Maximale Zieltemperatur:",
              "description": "Maximale Zieltemperatur (°C)",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].sensorOffset",
              "flex": "1 1 50%",
              "title": "Temperaturkorrektur:",
              "description": "Kalibrierung des Temperatursensors (°C)",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].temperatureStepSize",
              "flex": "1 1 50%",
              "title": "Temperaturschrittweite:",
              "description": "Gültige Werte: 0,5 (°F) und 1 (°C)<BR />(Wenn leer oder ungültig, wird sie anhand der Homebridge-Einstellungen berechnet)",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].xFanEnabled",
              "flex": "1 1 50%",
              "title": "Trocknung aktiviert",
              "description": "Wenn aktiviert, wird beim Ausschalten die Trocknungsfunktion auf dem Gerät automatisch aktiviert",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].temperatureSensor",
              "flex": "1 1 50%",
              "title": "Temperatursensor:",
              "description": "Zusätzlicher Temperatursensor in der Home-App",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].modifyVerticalSwingPosition",
              "flex": "1 1 50%",
              "title": "Vertikale Position anpassen:",
              "description": "Wann die vertikale Lamellenposition geändert wird",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].defaultVerticalSwing",
              "flex": "1 1 50%",
              "title": "Vertikale Position:",
              "description": "Vertikale Lamellenposition für Heiz-/Kühlmodus",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true && model.devices[arrayIndices].modifyVerticalSwingPosition !== 0);"
              }
            },
            {
              "key": "devices[].fanControlEnabled",
              "flex": "1 1 50%",
              "title": "Lüftersteuerung aktiviert",
              "description": "Wenn aktiviert, wird eine Lüftersteuerung zur Home-App hinzugefügt",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].defaultFanVerticalSwing",
              "flex": "1 1 50%",
              "title": "Vertikale Lüfterposition:",
              "description": "Vertikale Lamellenposition für den Lüftermodus",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true && [3, 4].includes(model.devices[arrayIndices].modifyVerticalSwingPosition) && model.devices[arrayIndices].fanControlEnabled === true);"
              }
            },
            {
              "key": "devices[].silentTimeRange",
              "flex": "1 1 50%",
              "title": "Ruhezeit:",
              "description": "Zeitraum ohne Signalton (Format: UU:MM-UU:MM, z. B.: 22:00-08:30)",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            }
          ]
        }
      ]
    }
  ]
}
