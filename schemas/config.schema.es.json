{
  "pluginAlias": "GREEAirConditioner",
  "pluginType": "platform",
  "singular": true,
  "strictValidation": false,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "required": true,
        "default": "GREE Air Conditioner"
      },
      "port": {
        "type": "integer",
        "required": false,
        "minimum": 1025
      },
      "scanInterval": {
        "type": "integer",
        "required": false,
        "default": 60,
        "minimum": 5
      },
      "disableAutoDetection": {
        "type": "boolean",
        "default": false
      },
      "devices": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "mac": {
              "type": "string",
              "required": true,
              "pattern": "^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$"
            },
            "name": {
              "type": "string",
              "required": false
            },
            "model": {
              "type": "string",
              "required": false
            },
            "speedSteps": {
              "type": "integer",
              "required": true,
              "default": 5,
              "oneOf": [
                {
                  "title": "Modelo de 3 velocidades",
                  "enum": [
                    3
                  ]
                },
                {
                  "title": "Modelo de 5 velocidades",
                  "enum": [
                    5
                  ]
                }
              ]
            },
            "statusUpdateInterval": {
              "type": "integer",
              "required": false,
              "minimum": 1,
              "placeholder": 10
            },
            "sensorOffset": {
              "type": "integer",
              "required": false,
              "placeholder": 40
            },
            "minimumTargetTemperature": {
              "type": "integer",
              "required": false,
              "minimum": 8,
              "placeholder": 16
            },
            "maximumTargetTemperature": {
              "type": "integer",
              "required": false,
              "maximum": 30,
              "placeholder": 30
            },
            "xFanEnabled": {
              "type": "boolean",
              "default": true
            },
            "temperatureSensor": {
              "type": "string",
              "required": true,
              "default": "disabled",
              "oneOf": [
                {
                  "title": "Desactivado",
                  "enum": [
                    "disabled"
                  ]
                },
                {
                  "title": "Accesorio subordinado",
                  "enum": [
                    "child"
                  ]
                },
                {
                  "title": "Accesorio independiente",
                  "enum": [
                    "separate"
                  ]
                }
              ]
            },
            "temperatureStepSize": {
              "type": "number",
              "minimum": 0.5,
              "multipleOf": 0.5,
              "required": false
            },
            "disabled": {
              "type": "boolean"
            },
            "modifyVerticalSwingPosition": {
              "type": "integer",
              "required": true,
              "default": 0,
              "oneOf": [
                {
                  "title": "Nunca",
                  "enum": [
                    0
                  ]
                },
                {
                  "title": "Reemplazar el valor predeterminado tras encender",
                  "enum": [
                    1
                  ]
                },
                {
                  "title": "Reemplazar el valor predeterminado tras encender o desactivar la oscilación",
                  "enum": [
                    2
                  ]
                },
                {
                  "title": "Establecer siempre tras encender",
                  "enum": [
                    3
                  ]
                },
                {
                  "title": "Establecer siempre tras encender o desactivar la oscilación",
                  "enum": [
                    4
                  ]
                }
              ]
            },
            "defaultVerticalSwing": {
              "type": "integer",
              "required": true,
              "default": 0,
              "oneOf": [
                {
                  "title": "Valor predeterminado del dispositivo",
                  "enum": [
                    0
                  ]
                },
                {
                  "title": "Fijo – Máximo",
                  "enum": [
                    2
                  ]
                },
                {
                  "title": "Fijo – Alto",
                  "enum": [
                    3
                  ]
                },
                {
                  "title": "Fijo – Medio",
                  "enum": [
                    4
                  ]
                },
                {
                  "title": "Fijo – Bajo",
                  "enum": [
                    5
                  ]
                },
                {
                  "title": "Fijo – Mínimo",
                  "enum": [
                    6
                  ]
                }
              ]
            },
            "defaultFanVerticalSwing": {
              "type": "integer",
              "required": true,
              "default": 0,
              "oneOf": [
                {
                  "title": "Valor predeterminado del dispositivo",
                  "enum": [
                    0
                  ]
                },
                {
                  "title": "Fijo – Máximo",
                  "enum": [
                    2
                  ]
                },
                {
                  "title": "Fijo – Alto",
                  "enum": [
                    3
                  ]
                },
                {
                  "title": "Fijo – Medio",
                  "enum": [
                    4
                  ]
                },
                {
                  "title": "Fijo – Bajo",
                  "enum": [
                    5
                  ]
                },
                {
                  "title": "Fijo – Mínimo",
                  "enum": [
                    6
                  ]
                }
              ]
            },
            "encryptionVersion" : {
              "type": "integer",
              "required": true,
              "default": 0,
              "oneOf": [
                {
                  "title": "Automático",
                  "enum": [
                    0
                  ]
                },
                {
                  "title": "v1",
                  "enum": [
                    1
                  ]
                },
                {
                  "title": "v2",
                  "enum": [
                    2
                  ]
                }
              ]
            },
            "port": {
              "type": "integer",
              "required": false,
              "minimum": 1025
            },
            "ip": {
              "type": "string",
              "required": false,
              "format": "ipv4"
            },
            "fanControlEnabled": {
              "type": "boolean"
            },
            "silentTimeRange": {
              "type": "string",
              "required": false,
              "pattern": "^(0[0-9]|1[0-9]|2[0-3]):[0-5][0-9]-(((0[0-9]|1[0-9]|2[0-3]):[0-5][0-9])|24:00)$"
            }
          }
        }
      }
    }
  },
  "layout": [
    {
      "key": "name",
      "title": "Nombre:"
    },
    {
      "type": "flex",
      "flex-flow": "row wrap",
      "items": [
        {
          "key": "port",
          "flex": "1 1 50%",
          "title": "Puerto:",
          "description": "Puerto UDP del puente usado para la detección de dispositivos (automático si está vacío)"
        },
        {
          "key": "scanInterval",
          "flex": "1 1 50%",
          "title": "Intervalo de búsqueda:",
          "description": "Intervalo entre intentos de detección en segundos (60 s si está vacío)"
        },
        {
          "key": "disableAutoDetection",
          "flex": "1 1 100%",
          "title": "Desactivar detección automática",
          "description": "Si la detección automática está desactivada, solo estarán disponibles los aires acondicionados listados en Dispositivos"
        }
      ]
    },
    {
      "type": "array",
      "key": "devices",
      "title": "Dispositivos",
      "buttonText": "Añadir dispositivo",
      "expandable": true,
      "expanded": false,
      "items": [
        {
          "type": "div",
          "displayFlex": true,
          "flex-flow": "row wrap",
          "items": [
            {
              "key": "devices[].mac",
              "flex": "1 1 50%",
              "title": "Dirección MAC (número de serie):",
              "description": "Dirección MAC en minúsculas y sin separadores<br />O<br />el valor especial: <b>default</b>"
            },
            {
              "key": "devices[].name",
              "flex": "1 1 50%",
              "title": "Nombre del dispositivo:",
              "description": "Nombre personalizado del dispositivo. Usa solo caracteres alfanuméricos, espacios y apóstrofes. Debe comenzar y terminar con una letra o un número. No se admiten emojis.",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac));"
              }
            },
            {
              "key": "devices[].disabled",
              "flex": "1 1 100%",
              "title": "Desactivado",
              "description": "Si se activa, este accesorio se eliminará y Casa lo ignorará",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac));"
              }
            },
            {
              "key": "devices[].ip",
              "flex": "1 1 50%",
              "title": "Dirección IP:",
              "description": "Dirección IP del dispositivo (automática si está vacía)",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].port",
              "flex": "1 1 50%",
              "title": "Puerto:",
              "description": "Puerto UDP específico del dispositivo (automático si está vacío)",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].statusUpdateInterval",
              "flex": "1 1 50%",
              "title": "Intervalo de actualización del estado:",
              "description": "Intervalo de actualización (en segundos)",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].encryptionVersion",
              "flex": "1 1 50%",
              "title": "Versión de cifrado del protocolo de red:",
              "description": "Déjalo en Automático. Si no funciona, selecciona una versión específica.",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default)$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].model",
              "flex": "1 1 50%",
              "title": "Modelo del dispositivo:",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].speedSteps",
              "flex": "1 1 50%",
              "title": "Niveles de velocidad del ventilador:",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].minimumTargetTemperature",
              "flex": "1 1 50%",
              "title": "Temperatura objetivo mínima:",
              "description": "Temperatura objetivo mínima (°C)",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].maximumTargetTemperature",
              "flex": "1 1 50%",
              "title": "Temperatura objetivo máxima:",
              "description": "Temperatura objetivo máxima (°C)",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].sensorOffset",
              "flex": "1 1 50%",
              "title": "Ajuste de temperatura:",
              "description": "Calibración del sensor de temperatura (°C)",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].temperatureStepSize",
              "flex": "1 1 50%",
              "title": "Incremento de temperatura:",
              "description": "Valores válidos: 0,5 (°F) y 1 (°C)<BR />(Si está vacío o no es válido, se calculará según la configuración de Homebridge)",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].xFanEnabled",
              "flex": "1 1 50%",
              "title": "Secar activado",
              "description": "Si está activada, la función Secar se activa automáticamente en el dispositivo al apagarse",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].temperatureSensor",
              "flex": "1 1 50%",
              "title": "Sensor de temperatura:",
              "description": "Sensor de temperatura adicional en la app Casa",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].modifyVerticalSwingPosition",
              "flex": "1 1 50%",
              "title": "Modificar posición vertical:",
              "description": "Cuándo modificar la posición de oscilación vertical",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].defaultVerticalSwing",
              "flex": "1 1 50%",
              "title": "Posición vertical:",
              "description": "Posición de oscilación vertical para los modos de calor/frío",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true && model.devices[arrayIndices].modifyVerticalSwingPosition !== 0);"
              }
            },
            {
              "key": "devices[].fanControlEnabled",
              "flex": "1 1 50%",
              "title": "Control del ventilador activado",
              "description": "Si se activa, se añade un control del ventilador a la app Casa",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            },
            {
              "key": "devices[].defaultFanVerticalSwing",
              "flex": "1 1 50%",
              "title": "Posición vertical del ventilador:",
              "description": "Posición de oscilación vertical para el modo ventilador",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true && [3, 4].includes(model.devices[arrayIndices].modifyVerticalSwingPosition) && model.devices[arrayIndices].fanControlEnabled === true);"
              }
            },
            {
              "key": "devices[].silentTimeRange",
              "flex": "1 1 50%",
              "title": "Franja horaria silenciosa:",
              "description": "Franja horaria en la que el dispositivo no emite sonidos (formato: HH:MM-HH:MM, p. ej.: 22:00-08:30)",
              "condition": {
                "functionBody": "return (model.devices && model.devices[arrayIndices] && model.devices[arrayIndices].mac && /^([a-f0-9]{12}|default|[a-f0-9]+@[a-f0-9]{12})$/.test(model.devices[arrayIndices].mac) && model.devices[arrayIndices].disabled !== true);"
              }
            }
          ]
        }
      ]
    }
  ]
}
